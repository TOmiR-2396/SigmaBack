          { "key": "Authorization", "value": "Bearer {{jwt}}", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Plan fuerza\",\n  \"description\": \"Rutina semanal\",\n  \"user\": {\n    \"id\": 2\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/plans/create",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "plans", "create"]
        }
      },
