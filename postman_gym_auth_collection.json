          { "key": "Authorization", "value": "Bearer {{jwt}}", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Nuevo nombre opcional\",\n  \"description\": \"Nueva descripción opcional\",\n  \"user\": {\n    \"id\": 2\n  }\n}"
        },
        "url": {
